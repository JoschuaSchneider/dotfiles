{
  "Angular NGX Root Form": {
    "prefix": "a-root-form",
    "description": "Angular NGX Root Form",
    "body": [
      "@Input() public input$ = new Subject<${1:FormType} | undefined>();",
      "@Output() public formUpdate = new Subject<${1:FormType}>();",
      "",
      "public form = createForm<${1:FormType}>(this, {",
      "\tformType: FormType.ROOT,",
      "\tinput$: this.input$,",
      "\toutput$: this.formUpdate,",
      "\tformControls: {",
      "\t\t$0",
      "\t}",
      "});"
    ]
  }
}
